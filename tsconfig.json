{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "json-type": ["typings/json"],
      "simulation-output-type": ["typings/simulationOutput"]
    }
  },
  "files": [
    "./node_modules/@types/jest/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "demo/**/*.ts",
    "jest.config.js",
    "typings/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}